      <div class="header-title">Box OAuth2 Rails</div>
    </div>
    <div class="content-container">
      <div class="content-sidebar">
        <ul class="nav-sidebar">
          <div class="link-group ">
            <ul>
              <li><%= link_to "Home", root_path, class: 'link' %></li>
<% if user_signed_in? -%>
                  <li><%= link_to "Sign out", destroy_user_session_path, class: 'link' %></li>
<% else %>
                  <li><%= link_to "Sign in", user_box_oauth2_omniauth_authorize_path, class: 'link' %></li>
<% end %>
            </ul>
          </div>
          <div class="link-group ">
            <div class="link-group-title">Manage</div>
            <ul>
              <li><%= link_to "Users", users_path, class: 'link' %></li>
            </ul>
          </div>
        </ul>
      </div>
      <div class="content">
<% if notice %>
        <div class="notification error wrap"><span><%= notice %></span></div>
<% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
